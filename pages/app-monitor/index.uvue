    <!-- è®¾ç½®é¢æ¿ -->
    <view class="settings-section">
      <text class="section-title">é€šçŸ¥è®¾ç½®</text>
      <view class="setting-item">
        <text class="setting-label">æ£€æŸ¥é—´éš” (ç§’)</text>
