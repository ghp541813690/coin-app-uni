      </view>
    </view>

    <!-- H5 å¼¹çª—ç»„ä»¶ -->
    <h5-popup-window
      :visible="h5PopupVisible"
      :app-info="currentAppInfo"
      :config="popupConfig"
      @close="closeH5Popup"
      @action="handlePopupAction"
      @minimize="handlePopupMinimize"
      @maximize="handlePopupMaximize"
      @error="handlePopupError"
    />
