<script>
export default {
  data() {
    return {
      platform: '',
      version: ''
    }
  },
  
  onLoad() {
    this.getPlatformInfo()
  },
  
  methods: {
    navigateToMonitor() {
      uni.navigateTo({
        url: '/pages/app-monitor/index'
      })
    },
    
    navigateToWeb() {
      // 跳转到原有的 Web 应用
      uni.navigateTo({
        url: '/pages/web-view/index'
      })
    },
    
    getPlatformInfo() {
      // #ifdef APP-ANDROID
      this.platform = 'Android'
      // #endif
      
      // #ifdef APP-IOS
      this.platform = 'iOS'
      // #endif
      
      // #ifdef H5
      this.platform = 'H5'
      // #endif
      
      // 获取应用版本信息
      const systemInfo = uni.getSystemInfoSync()
      this.version = systemInfo.version || '1.0.0'
    }
  }
}
</script>

